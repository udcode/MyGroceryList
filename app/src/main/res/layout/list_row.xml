<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/grocery_nameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grocery name:"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/grocery_qtyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grocery_nameID"
                android:text="quantity:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grocery_qtyID"
                android:text="data add:"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dateID"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/edit_buttonID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:drawable/ic_menu_edit"

                    />
                <Button
                    android:id="@+id/delete_buttonID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_delete" />
            </TableRow>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>